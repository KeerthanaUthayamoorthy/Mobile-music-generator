<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000"
    tools:context="com.example.acer.project_try.instrument_selection">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="191dp"
        android:text="Piano"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/Shaker_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="152dp"
        android:layout_height="128dp"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/Bell_btn"
        android:background="@drawable/mmaracas"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:id="@+id/Bell_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="152dp"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bell"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:id="@+id/Tambourine_btn"
        android:layout_width="150dp"
        android:layout_height="132dp"
        android:layout_alignStart="@+id/tabla_btn"
        android:layout_alignTop="@+id/Bell_btn"
        android:background="@drawable/ttambourine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <Button
        android:id="@+id/tabla_btn"
        android:layout_width="150dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Shaker_btn"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ttabla" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bell_btn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-60dp"
        android:layout_marginStart="66dp"
        android:text="Bell"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bell_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-60dp"
        android:text="Tambourine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginStart="44dp"
        android:text="Maracas"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:text="Tabla"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Piano_btn"
        android:layout_toStartOf="@+id/Tambourine_btn"
        android:text="CLICK TO PLAY Instruments"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/Piano_btn"
        android:layout_width="149dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Tambourine_btn"
        android:layout_marginTop="211dp"
        android:background="@drawable/piano" />

</RelativeLayout>
